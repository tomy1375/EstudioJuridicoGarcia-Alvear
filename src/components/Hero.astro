---
// Hero component
---

<section id="inicio" class="relative min-h-screen flex items-center pt-20 overflow-x-hidden">
  <!-- Background Image with overlay - Usando picture para diferentes imágenes según dispositivo -->
  <div class="bg-element absolute inset-0 z-0">
    <picture>
      <!-- Imagen para móviles (hasta 768px) -->
      <source media="(max-width: 767px)" srcset="/justiciamovil.webp" />
      <!-- Imagen para tablets y escritorio (768px y superior) -->
      <source media="(min-width: 768px)" srcset="/juridico2.webp" />
      <!-- Imagen fallback si el navegador no soporta picture -->
      <img src="/juridico2.webp" alt="Lady Justice" class="w-full h-full object-cover opacity-40" />
    </picture>
    <div class="decorative-element absolute inset-0 bg-gradient-to-r from-black/80 to-black/40"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 z-10 flex flex-col md:flex-row items-center justify-between py-20">
    <div class="md:w-1/2 mb-10 md:mb-0">
      <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight tracking-tight">
        <span class="block text-amber-500 mb-2">ESTUDIO JURÍDICO</span>
        <span class="block">GARCIA & ALVEAR</span>
        <span class="block mt-2">SOLUCIONES LEGALES</span>
      </h1>
      <p class="hero-description text-lg md:text-xl mb-10 text-gray-300 max-w-xl">
        Defendemos tus derechos con cercanía, ética y profesionalismo.
      </p>
      <a
        href="https://wa.me/123456789"
        class="hero-cta inline-flex items-center bg-brand-700 hover:bg-brand-800 text-white font-medium py-3 px-8 rounded-full transition-colors duration-300 shadow-lg hover:shadow-brand-800/20"
      >
        REALIZÁ TU CONSULTA
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="ml-2 w-5 h-5">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
        </svg>
      </a>
    </div>
    <div class="md:w-1/2 flex justify-center">
      <div class="hero-image w-64 md:w-96">
        <img src="/logoj.webp" alt="Garcia & Alvear Logo" class="w-full" />
      </div>
    </div>
  </div>
</section>

<script>
  // Precargar la imagen de fondo para evitar parpadeos
  document.addEventListener('DOMContentLoaded', function() {
    const isMobile = window.innerWidth < 768;
    const bgImage = new Image();
    bgImage.src = isMobile ? '/justiciamovil.webp' : '/juridico2.webp';
  });
</script>
