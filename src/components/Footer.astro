---
// Footer component
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Servicios",
    links: [
      { name: "Derecho de Familia", url: "#derecho-familia" },
      { name: "Derecho Civil", url: "#derecho-civil" },
      { name: "Derecho Penal", url: "#derecho-penal" },
      { name: "Derecho Laboral", url: "#derecho-laboral" },
      { name: "Sucesiones", url: "#sucesiones" }
    ]
  },
  {
    title: "Estudio",
    links: [
      { name: "Sobre Nosotros", url: "#sobre-nosotros" },
      { name: "Equipo", url: "#equipo" },
      { name: "Contacto", url: "#contacto" }
    ]
  }
];

const contactInfo = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>`,
    text: "+54 11 4567-8900"
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>`,
    text: "info@irineocalzone.com.ar"
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>`,
    text: "Av. Corrientes 1234, CABA"
  }
];
---

<footer class="bg-brand-950 border-t border-amber-900/30 pt-12 pb-8">
  <div class="container mx-auto px-4">
    <!-- Logo y enlaces -->
    <div class="flex flex-col lg:flex-row justify-between mb-10">
      <!-- Logo y descripción -->
      <div class="lg:w-1/3 mb-8 lg:mb-0">
        <img src="/logoj.webp" alt="Logo" class="h-16 mb-4" />
        <p class="text-gray-400 text-sm mb-4 max-w-md">
          Estudio jurídico especializado en derecho de familia, con más de 15 años de experiencia brindando soluciones legales a toda Argentina.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-amber-600 hover:text-amber-500 transition-colors duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z" />
            </svg>
          </a>
          <a href="#" class="text-amber-600 hover:text-amber-500 transition-colors duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          </a>
          <!-- <a href="#" class="text-amber-600 hover:text-amber-500 transition-colors duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z" />
            </svg>
          </a> -->
        </div>
      </div>
      
      <!-- Enlaces rápidos - 3 columnas en la misma fila -->
      <div class="lg:w-2/3">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Servicios -->
          <div>
            <h3 class="text-amber-500 font-bold mb-4 text-lg font-playfair">{footerLinks[0].title}</h3>
            <ul class="space-y-2">
              {footerLinks[0].links.map(link => (
                <li>
                  <a href={link.url} class="text-gray-400 hover:text-amber-400 transition-colors duration-300 text-sm">
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Estudio -->
          <div>
            <h3 class="text-amber-500 font-bold mb-4 text-lg font-playfair">{footerLinks[1].title}</h3>
            <ul class="space-y-2">
              {footerLinks[1].links.map(link => (
                <li>
                  <a href={link.url} class="text-gray-400 hover:text-amber-400 transition-colors duration-300 text-sm">
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Contacto rápido -->
          <div>
            <h3 class="text-amber-500 font-bold mb-4 text-lg font-playfair">Contacto</h3>
            <ul class="space-y-2">
              {contactInfo.map(item => (
                <li class="flex items-start">
                  <Fragment set:html={item.icon} />
                  <span class="text-gray-400 text-sm">{item.text}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Línea divisoria -->
    <div class="border-t border-gray-800 my-6"></div>
    
    <!-- Copyright -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-500 text-sm mb-4 md:mb-0">
        © {currentYear} Estudio Jurídico Garcia & Alvear. Todos los derechos reservados.
      </p>
      <div class="flex space-x-6">
        <a href="#" class="text-gray-500 hover:text-amber-500 text-sm transition-colors duration-300">Política de Privacidad</a>
        <a href="#" class="text-gray-500 hover:text-amber-500 text-sm transition-colors duration-300">Términos y Condiciones</a>
      </div>
    </div>
  </div>
</footer>
