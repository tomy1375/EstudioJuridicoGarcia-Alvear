---
// Contact component
const WEB3FORMS_ACCESS_KEY = "7ed836a7-266b-4f1c-b507-697bab218b47";
---

<section id="contacto" class="animate-section bg-brand-900 py-20 scroll-mt-24">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16 text-amber-500">CONTACTO</h2>
    
    <div class="flex flex-col md:flex-row gap-12">
      <!-- Formulario de contacto -->
      <div class="md:w-1/2">
        <div class="contact-form bg-brand-800 p-8 rounded-lg shadow-lg">
          <h3 class="text-2xl font-bold mb-6 text-amber-400 font-playfair">Envíenos su consulta</h3>
          
          <!-- Mensajes de estado del formulario -->
          <div id="form-success" class="hidden mb-6 p-4 bg-green-900/30 border border-green-700 text-green-300 rounded-md">
            Su mensaje ha sido enviado correctamente. Nos pondremos en contacto a la brevedad.
          </div>
          
          <div id="form-error" class="hidden mb-6 p-4 bg-red-900/30 border border-red-700 text-red-300 rounded-md">
            Ha ocurrido un error al enviar el mensaje. Por favor, inténtelo nuevamente.
          </div>
          
          <form id="contact-form" action="https://api.web3forms.com/submit" method="POST" class="space-y-6">
            <!-- Campos ocultos para Web3Forms -->
            <input type="hidden" name="access_key" value={WEB3FORMS_ACCESS_KEY}>
            <input type="hidden" name="subject" value="Nueva consulta desde el sitio web">
            <input type="hidden" name="from_name" value="Estudio Jurídico Garcia & Alvear">
            <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
            
            <div>
              <label for="name" class="block text-amber-400 mb-2 font-medium">Nombre Completo</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-3 bg-brand-900/50 border border-amber-900/50 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500 text-white transition-all duration-300" 
                required 
              />
            </div>
            
            <div>
              <label for="email" class="block text-amber-400 mb-2 font-medium">Correo Electrónico</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 bg-brand-900/50 border border-amber-900/50 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500 text-white transition-all duration-300" 
                required 
              />
            </div>
            
            <div>
              <label for="phone" class="block text-amber-400 mb-2 font-medium">Teléfono</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="w-full px-4 py-3 bg-brand-900/50 border border-amber-900/50 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500 text-white transition-all duration-300" 
              />
            </div>
            
            <div>
              <label for="message" class="block text-amber-400 mb-2 font-medium">Mensaje</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                class="w-full px-4 py-3 bg-brand-900/50 border border-amber-900/50 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500 text-white transition-all duration-300" 
                required
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              id="submit-button"
              class="w-full bg-amber-700 hover:bg-amber-600 text-white font-medium py-3 px-8 rounded-md transition-all duration-300 flex items-center justify-center"
            >
              <span>Enviar Consulta</span>
              <svg id="loading-icon" class="animate-spin ml-2 h-5 w-5 text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
      
      <!-- Información de contacto -->
      <div class="md:w-1/2">
        <div class="contact-info bg-brand-800 p-8 rounded-lg shadow-lg h-full">
          <h3 class="text-2xl font-bold mb-6 text-amber-400 font-playfair">Información de Contacto</h3>
          
          <div class="space-y-8">
            <div class="flex items-start">
              <div class="bg-amber-700/10 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="feature-icon h-6 w-6 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold text-amber-300 mb-2 text-lg">Dirección</h4>
                <p class="text-gray-300">Av. Corrientes 1234, Piso 5, Oficina B</p>
                <p class="text-gray-300">Ciudad Autónoma de Buenos Aires, Argentina</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-amber-700/10 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="feature-icon h-6 w-6 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold text-amber-300 mb-2 text-lg">Teléfono</h4>
                <p class="text-gray-300">+54 11 4567-8900</p>
                <p class="text-gray-300">+54 11 4567-8901</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-amber-700/10 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="feature-icon h-6 w-6 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold text-amber-300 mb-2 text-lg">Correo Electrónico</h4>
                <p class="text-gray-300">info@garciayalvear.com.ar</p>
                <p class="text-gray-300">consultas@garciayalvear.com.ar</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-amber-700/10 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="feature-icon h-6 w-6 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold text-amber-300 mb-2 text-lg">Horario de Atención</h4>
                <p class="text-gray-300">Lunes a Viernes: 9:00 - 18:00</p>
                <p class="text-gray-300">Sábados: 9:00 - 13:00 (con cita previa)</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    const submitButton = document.getElementById('submit-button');
    const loadingIcon = document.getElementById('loading-icon');
    const formSuccess = document.getElementById('form-success');
    const formError = document.getElementById('form-error');
    
    if (form && form instanceof HTMLFormElement) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Mostrar icono de carga
        if (submitButton instanceof HTMLButtonElement && loadingIcon) {
          submitButton.disabled = true;
          loadingIcon.classList.remove('hidden');
        }
        
        // Ocultar mensajes previos
        if (formSuccess) formSuccess.classList.add('hidden');
        if (formError) formError.classList.add('hidden');
        
        // Enviar formulario a Web3Forms
        fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          body: new FormData(form)
        })
        .then(async (response) => {
          let json = await response.json();
          
          if (response.status == 200) {
            // Éxito
            if (formSuccess) formSuccess.classList.remove('hidden');
            form.reset();
          } else {
            // Error
            if (formError && formError instanceof HTMLElement) {
              formError.textContent = json.message || 'Ha ocurrido un error al enviar el mensaje. Por favor, inténtelo nuevamente.';
              formError.classList.remove('hidden');
            }
            console.log(json);
          }
        })
        .catch(error => {
          // Error de red
          if (formError && formError instanceof HTMLElement) {
            formError.textContent = 'Error de conexión. Por favor, verifique su conexión a internet e inténtelo nuevamente.';
            formError.classList.remove('hidden');
          }
          console.log(error);
        })
        .finally(() => {
          // Restaurar botón
          if (submitButton instanceof HTMLButtonElement && loadingIcon) {
            submitButton.disabled = false;
            loadingIcon.classList.add('hidden');
          }
          
          // Desplazar a los mensajes
          if (formSuccess && !formSuccess.classList.contains('hidden')) {
            formSuccess.scrollIntoView({ behavior: 'smooth', block: 'center' });
          } else if (formError && !formError.classList.contains('hidden')) {
            formError.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
        });
      });
    }
  });
</script>
